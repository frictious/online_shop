<%- include("partials/header") %>
      <section>
        <div class="container-fluid">
          <!-- Page Header-->
          <header> 
            <h1 class="h3 display">Products</h1>
          </header>
          <div class="form-group text-right"><a href="/admin/products/add" class="fa fa-plus btn btn-primary"> Add</a></div>
          <div class="row">
            <div class="col-lg-12">
              <div class="card">
                <!--<div class="card-header">
                  <h4>Striped table with hover effect</h4>
                </div>-->
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Image</th>
                          <th>Product Name</th>
                          <th>Price</th>
                          <th colspan="3">Actions</th><!-- First column is for visibility, second for Edit, third for Delete-->
                        </tr>
                      </thead>
                      <tbody>
                        <% let num = 0; %>
                        <% products.forEach((product) => { %>
                          <tr>
                            <td><%- num += 1 %></td>
                            <td><img src="/admin/files/<%- product.inside %>" alt="<%- product.name %>" class="img-responsive" width="100px" height="50px"></td>
                            <td><%- product.name %></td>
                            <td><%- product.cost %></td>
                            <td>Visibility</td>
                            <td>Edit</td>
                            <td>Delete</td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
<%- include("partials/footer") %>